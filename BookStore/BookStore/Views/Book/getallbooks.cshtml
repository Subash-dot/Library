@model IEnumerable<BookModel>


<div class="container">
    <h3 class="display-4">All Books</h3>
    <div class="row">
        @foreach (var data in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <svg class="card-img img-thumbnail" width="100%" height="225"></svg>
                    <div class="card-body">
                        <h3>@data.Id . @data.Title</h3>
                        <p class="card-text">@data.Description</p>
                        <div class="d-flex justify-content-between align-item-center">
                            <div class="btn-group">
                                <a href="/book/getbook/@data.Id" class="btn  btn-outline-primary">View Details</a>
                            </div>
                            <small class="text-muted">@data.Author</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

